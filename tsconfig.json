{
  "compilerOptions": {
    "declaration": true,
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"target": "es2020",
		"lib": [
			"es2017",
			"dom"
		],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
		"lib",
    "dist",
  ]
}
