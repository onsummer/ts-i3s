{
  "compilerOptions": {
		/* 基础配置 */
		"target": "esnext",
		"lib": [
			"dom",
			"esnext"
		],

    "declaration": true,
		"declarationDir": "dist/types",
		"sourceMap": true,
		"removeComments": false,
		
		"baseUrl": ".",
		"outDir": "./dist",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"module": "ESNext",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
		"lib",
    "dist",
  ]
}
